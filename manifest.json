{
  "manifest_version": 3,
  "name": "Prompt Usage Analytics",
  "description": "Log LLM prompts, model, token usage and success score across popular AI platforms",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "scripting",
    "webRequest"
  ],

  "host_permissions": [
    "*://*.anthropic.com/*",
    "*://*.openai.com/*",
    "*://*.openrouter.ai/*",
    "*://*.x.ai/*",
    "*://*.poe.com/*",
    "*://*.chatgpt.com/*",
    "*://*.claude.ai/*",
    "*://*.grok.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "options_ui": {
    "page": "popup.html",
    "open_in_tab": false
  }
}
